        <h1>UPDATE DATA MAHASISWA</h1>

        <br><br>

        <form class="row row-cols-lg-auto g-3 align-items-center needs-validation formnimahasiswa" novalidate>
          <div class="col-12">
            <input type="text" class="form-control validation0 onoffbuttons justnumber" name="nim" id="valnimahasiswa" placeholder="Masukkan NIM" maxlength="10">
          </div>

          <div class="col-12">
            <button class="btn btn-primary" id="valnim" type="submit">Cari</button>
          </div>
        </form>

        <br><br>

        <form class="row g-6 formupdatemahasiswa">
          <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Nama Mahasiswa</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext canedit edittext" name="namamahasiswa" id="hasilnamamahasiswa" value="Jenny" readonly>
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Jurusan</label>
            <div class="col-sm-10">
              <select class="form-select-plaintext canedit editselect" name="jurusan" id="hasiljurusanmahasiswa" disabled>
                <option value="Teknik Informatika">Teknik Informatika</option>
                <option value="Sistem Informasi">Sistem Informasi</option>
                <option value="Teknik Komputer">Teknik Komputer</option>
              </select>
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Semester</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext canedit edittext" name="semester" id="hasilalamatmahasiswa" value="1" readonly>
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Status</label>
            <div class="col-sm-10">
              <select class="form-select-plaintext canedit editselect" name="status" id="hasilstatusmahasiswa" disabled>
                <option value="Belum Menikah">Belum Menikah</option>
                <option value="Menikah">Menikah</option>
                <option value="Duda/Janda">Duda/Janda</option>
              </select>
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Alamat</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext canedit edittext" name="alamat" id="hasilalamatmahasiswa" value="Haji Alim No.1" readonly>
            </div>
          </div>

          <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Nomor Handphone</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext canedit edittext" name="hp" id="hasilhpmahasiswa" value="082282017085" readonly>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-12">
              <button class="btn btn-primary" id="btnubahmahasiswa" type="button">Ubah Data</button>
              <button class="btn btn-primary" id="btnupdatemahasiswa" type="button" hidden>Update</button>
            </div>
          </div>
        </form>
