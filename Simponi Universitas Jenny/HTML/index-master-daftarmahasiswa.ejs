      <div class="flex-column flex-shrink-0 p-3 divformmahasiswa" style="width: 1068px; overflow: auto;">
        <h1>FORMULIR PENDAFTARAN MAHASISWA</h1>

        <br><br>

        <form id="formmahasiswa" class="row g-3 needs-validation formdaftarmahasiswa" action="/homepage-master-inputnewmhs" method="post" novalidate>
          <div class="row g-3">
            <div class="col-md-9">
              <label class="form-label">Nama Lengkap</label>
              <input type="text" class="form-control validation0" name="namamahasiswa" id="valnamamahasiswa" onkeyup="cekisi()" required>
            </div>

            <div class="col-md">
              <label class="form-label">Gender</label>
              <select class="form-select validation0" name="gender" id="valgendermahasiswa" onchange="cekisi()" required>
                <option value="" selected>Pilih</option>
                <option value="Laki-Laki">Laki-Laki</option>
                <option value="Perempuan">Perempuan</option>
              </select>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-md">
              <label class="form-label">Tempat Lahir</label>
              <input type="text" class="form-control validation0" name="tempatl" id="valtempatmahasiswa" onkeyup="cekisi()" required>
            </div>

            <div class="col-md">
              <label class="form-label">Tanggal Lahir</label>
              <input type="date" class="form-control validation0" name="tanggall" id="valtanggalmahasiswa" onkeyup="cekisi()" required>
            </div>

            <div class="col-md">
              <label class="form-label">Status</label>
              <select class="form-select validation0" name="status" id="valsttsmahasiswa" onchange="cekisi()" required>
                <option value="" selected>Pilih</option>
                <option value="Belum Menikah">Belum Menikah</option>
                <option value="Menikah">Menikah</option>
                <option value="Duda/Janda">Duda/Janda</option>
              </select>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-md-2">
              <label class="form-label">Pendidikan Terakhir</label>
              <select class="form-select validation0 pilihpendidikan" name="pterakhir" id="valedumahasiswa" onchange="cekisi()" required>
                <option value="" selected>Pilih</option>
                <option value="SMA/SMK">SMA/SMK</option>
                <option value="S1">S1</option>
                <option value="S2">S2</option>
              </select>
            </div>

            <div class="col-md-4">
              <label class="form-label">Jurusan Terakhir</label>
              <select class="form-select validation0 pilihjurusan" name="jurusanpterakhir" id="valmajormahasiswa" onchange="cekisi()" required></select>
            </div>

            <div class="col-sm">
              <label class="form-label">Email</label>
              <input type="email" class="form-control validation0" name="email" id="valemailmahasiswa" onkeyup="cekisi()" required>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-md-9">
              <label class="form-label">Alamat</label>
              <input type="text" class="form-control validation0" name="alamat" id="valalamatmahasiswa" onkeyup="cekisi()" required>
            </div>

            <div class="col-md">
              <label class="form-label">Nomor Handphone</label>
              <input type="text" class="form-control validation0 justnumber" name="hp" id="valnhpmahasiswa" maxlength="15" onkeyup="cekisi()" required>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-md-2">
              <label class="form-label">Program Studi</label>
              <select class="form-select validation0" name="programstudi" id="valprogramstudimahasiswa" onchange="cekisi()" required></select>
            </div>

            <div class="col-md-3">
              <label class="form-label">Jurusan yang Diambil</label>
              <select class="form-select validation0" name="jurusanambil" id="valjurusanambilmahasiswa" onchange="cekisi()" required></select>
            </div>

            <div class="col-md-2">
              <label class="form-label">Semester</label>
              <input type="text" readonly class="form-control-plaintext validation0" name="semester" id="valsemestermahasiswa" value="1">
            </div>

            <div class="col-md">
              <label class="form-label">Foto</label>
              <input type="file" accept=".png, .jpg, .jpeg" class="form-control validation0" name="foto" id="valfotomahasiswa" onchange="cekisi(); readURLPic(this)" required>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-12">
              <button class="btn btn-primary" id="btnrevdaftarmahasiswa" type="submit">Daftarkan</button>
            </div>
          </div>

          <!-- modal -->
          <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
